<!-- views/courses/index.ejs -->

<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5 pb-5">
      <h1>Courses</h1>
      <p>Here are all our current course offerings.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course => { %>
          <tr>
            <td>
              <a href="<%= `/courses/${course._id}` %>">
                <%= course.title %>
              </a>
            </td>
            <td><%= course.description %></td>
            <td>
              <a href="<%=`courses/${course._id}/edit`%>"> Edit </a>
            </td>
            <td>
              <a
                href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this record?')"
                a
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/courses/new" class="btn btn-primary">Add New Course</a>
        <a
          href="/"
          class="btn ut-red disabled"
          role="button"
          aria-disabled="true"
          >Delete All Courses</a
        >
      </div>
    </div>
  </div>
</main>
